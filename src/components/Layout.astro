---
// components/Layout.astro
const { title, currentPage } = Astro.props;
---

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css" rel="stylesheet">
</head>
<body class="min-h-screen gradient-bg text-white flex flex-col items-center p-4">
<nav class="w-full max-w-md mb-8 flex space-x-4 glass-effect rounded-lg p-2 animate-fade-in">
    <a
            href="/"
            class={`flex-1 py-2 px-4 rounded-lg text-center transition-all duration-300 ${currentPage === 'calculator' ? 'bg-blue-600' : 'hover:bg-white hover:bg-opacity-10'}`}
    >
        Калькулятор
    </a>
    <a
            href="/analyzer"
            class={`flex-1 py-2 px-4 rounded-lg text-center transition-all duration-300 ${currentPage === 'analyzer' ? 'bg-blue-600' : 'hover:bg-white hover:bg-opacity-10'}`}
    >
        Анализ расчётки
    </a>
</nav>

<slot />
</body>
</html>